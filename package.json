{
  "name": "@oi2/ims-lti",
  "version": "3.0.4",
  "description":
    "Module for building an LTI Tool Provider and accept LTI launch requests",
  "author": {
    "name": "James Rundquist",
    "email": "james@courseshark.com"
  },
  "contributors": [
    {
      "name": "Owen Smith",
      "email": "owen@omsmith.ca"
    },
    {
      "name": "David Kosub",
      "email": "dave@davidkosub.com"
    },
    {
      "name": "Chenglu Li",
      "email": "li.chenglu@utexas.edu"
    }
  ],
  "license": "MIT",
  "keywords": ["ims", "lti", "provider"],
  "repository": {
    "type": "git",
    "url": "https://github.com/lichenglu/ims-lti"
  },
  "bugs": {
    "url": "https://github.com/lichenglu/ims-lti/issues"
  },
  "files": ["src/"],
  "main": "./src/ims-lti",
  "scripts": {
    "coverage": "nyc npm test",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint src/ test/",
    "format": "npm run lint -- --fix",
    "test": "mocha test/"
  },
  "engines": {
    "node": ">=6.9.0"
  },
  "dependencies": {
    "redis": "^2.8.0",
    "uuid": "~3.1.0",
    "xml2js": "^0.4.19",
    "xmlbuilder": "^9.0.4"
  },
  "devDependencies": {
    "coveralls": "^3.0.0",
    "eslint": "^4.13.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-xo": "^0.19.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-prettier": "^2.3.1",
    "lodash.get": "^4.4.2",
    "mocha": "^4.0.1",
    "nyc": "^11.3.0",
    "prettier": "~1.9.2",
    "should": "^13.1.3",
    "xmldom": "^0.1.27",
    "xpath": "0.0.27"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2016,
      "sourceType": "script"
    },
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended",
      "xo/esnext",
      "prettier"
    ],
    "plugins": ["prettier", "node"],
    "rules": {
      "eqeqeq": ["error", "smart"],
      "no-console": ["warn"],
      "no-confusing-arrow": [
        "error",
        {
          "allowParens": true
        }
      ],
      "no-eq-null": ["off"],
      "strict": ["error", "safe"],
      "prettier/prettier": ["error"],
      "arrow-body-style": ["error", "as-needed"],
      "newline-after-var": ["error", "always"],
      "one-var": [
        "error",
        {
          "initialized": "never",
          "uninitialized": "always"
        }
      ],
      "padded-blocks": ["off"],
      "prefer-arrow-callback": [
        "error",
        {
          "allowNamedFunctions": true
        }
      ],
      "spaced-comment": [
        "error",
        "always",
        {
          "markers": ["/"]
        }
      ],
      "valid-jsdoc": [
        "error",
        {
          "requireParamDescription": true,
          "requireReturnDescription": false,
          "requireReturn": false
        }
      ],
      "camelcase": ["off"],
      "max-params": ["off"]
    },
    "overrides": [
      {
        "files": ["test/*.js"],
        "env": {
          "node": true,
          "mocha": true
        },
        "rules": {
          "prefer-arrow-callback": ["off"]
        }
      }
    ]
  },
  "nyc": {
    "reporter": ["lcov", "text"]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": false,
    "printWidth": 80
  }
}
